/* pages/annuity.wxss */
.container{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* justify-content: space-between; */
  padding: 0;
  /* box-sizing: border-box; */
}

.result{
  width: 100%;
  background-color: #b61f0c; 
  /* #be2e1b  #b61f0c*/
}

.result .title{
  padding: 0 40rpx;
  font-size: 40rpx;
  padding-top:20rpx;
  color: rgb(255, 255, 255);
  font-weight:600;
}

.result .value{
  padding: 0 40rpx;
  line-height: 100rpx;
  font-size: 60rpx;
  color: #fff;
}

.item {
  border-bottom: 1px solid #e2e2e2;
  height:56rpx;
  line-height: 56rpx;
  font-size:32rpx;
  padding: 20rpx 0rpx;
  color: #909090;
}

.item .label{
  width: 40%;
  float: left;
  vertical-align: middle;
}

.item input{
  margin-left: 30%;
  margin-right: 10%;
  height:56rpx;
  border: 1rpx solid #d9d9d9;
  border-radius: 6rpx;
  background-color: #f1f1f1;
  text-align: right;
  padding-right: 8rpx;
  color:#010708;
}

.picture_cf{
  height: 75rpx;
  width: 550rpx;
   margin: 30rpx auto;
}

.calButton {
  width: 300rpx;
  height: 80rpx;
  margin: 30rpx auto;
  background-color: #8d1606;
  color: #fff;
}