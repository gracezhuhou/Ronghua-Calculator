/* pages/statistic/statistic.wxss */
.numInput {
  width: 450rpx;
  height: 60rpx;
  margin: 10rpx 40rpx;
  border-color: gainsboro;
  text-align: left;
  border: 1rpx solid #d9d9d9;
  border-radius: 6rpx;
  background-color: #f1f1f1;
  padding: 0 20rpx;
}

.resultName {
  width: 120rpx;
  height: 40rpx;
  margin: 10rpx;
  text-align: right;
  font-size: 0.8rem;
}

.resultNum {
  width: 120rpx;
  height: 40rpx;
  margin: 10rpx;
  text-align: right;
  background-color: white;
  border-radius: 7rpx;
}

.variable {
  height: 40rpx;
  margin: 20rpx 0;
  line-height: 40rpx;
  font-size: 0.8rem;
}

.variableNum {
  width: 100rpx;
  height: 40rpx;
  margin: 20rpx 30rpx 20rpx 10rpx;
  text-align: left;
  background-color: white;
  border-radius: 7rpx;
}

.resultView {
  width: 100%;
  height: inherent;
  background-color: #b61f0c; 
}

.resultText {
  width: 100%;
  margin: 20rpx 60rpx;
  color: white;
}
